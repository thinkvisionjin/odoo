    </record>-->
    

     <!--Top menu item -->
    
    <menuitem name="项目管理" id="xmgl.menu_root"/>
    
    <!-- menu categories -->
    
    <menuitem name="招标代理项目" id="xmgl.menu_1" parent="xmgl.menu_root"/>
    <menuitem name="非代理项目" id="xmgl.menu_2" parent="xmgl.menu_root"/>
    
    <menuitem name="项目财务管理" id="xmgl.menu_3" parent="xmgl.menu_root"/>
    
    <!-- actions -->
    <menuitem name="项目登记管理" id="xmgl.menu_1_list" parent="xmgl.menu_1" action="xmgl.action_window"/>
    <menuitem name="采购文件管理" id="xmgl.menu_2_list" parent="xmgl.menu_1" action="xmgl.action_window"/>
    <menuitem name="购买单位情况汇总表" id="xmgl.menu_3_list" parent="xmgl.menu_1" action="xmgl.action_window"/>
    <menuitem name="中标通知书管理" id="xmgl.menu_4_list" parent="xmgl.menu_1" action="xmgl.action_window"/>
   
    <menuitem name="招标代理项目" id="xmgl.menu_1" parent="xmgl.menu_root"/>
   
    
